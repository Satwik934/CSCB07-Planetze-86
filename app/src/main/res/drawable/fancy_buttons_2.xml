<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#1b1b1e" /> <!-- Shadow color -->
            <corners android:radius="30dp" /> <!-- Slightly less rounded corners -->
        </shape>
    </item>

    <!-- Textbox Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#d8dbe2" /> <!-- Background color -->
            <corners android:radius="30dp" />
            <stroke
                android:width="2dp"
                android:color="#009999" /> <!-- Border for textbox -->
        </shape>
    </item>

</layer-list>
