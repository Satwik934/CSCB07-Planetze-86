<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/gradient_3">

    android:background="#D8DBE2">
    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back Button"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header: Daily Carbon Footprint Tracking -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:text="DAILY CARBON FOOTPRINT TRACKING"
        android:textColor="#1B1B1E"
        android:textSize="18sp"
        android:textStyle="italic"
        android:background="@drawable/fancy_text_background"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subheader: Consumption and Shopping Activities -->
    <TextView
        android:id="@+id/subheader_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="CONSUMPTION AND SHOPPING ACTIVITIES"
        android:textColor="#1B1B1E"
        android:textSize="18sp"
        android:textStyle="italic"
        android:background="@drawable/fancy_text_background"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_text" />

    <!-- Button: Buy New Clothes -->
    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/fancy_buttons"
        android:id="@+id/button_buy_new_clothes"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="BUY NEW CLOTHES"
        android:textColor="#d8dbe2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subheader_text" />

    <!-- Button: Buy Electronics -->
    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/fancy_buttons"
        android:id="@+id/button_buy_electronics"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="BUY ELECTRONICS"
        android:textColor="#d8dbe2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_buy_new_clothes" />

    <!-- Button: Other Purchases -->
    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/fancy_buttons"
        android:id="@+id/button_other_purchases"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="OTHER PURCHASES"
        android:textColor="#d8dbe2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_buy_electronics" />

    <!-- Button: Energy Bills -->
    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/fancy_buttons"
        android:id="@+id/button_energy_bills"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="ENERGY BILLS"
        android:textColor="#d8dbe2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_other_purchases" />

</androidx.constraintlayout.widget.ConstraintLayout>
